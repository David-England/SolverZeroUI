<InputNumber @bind-Value="DisplayValue" />

@code {
	[Parameter]
	public int Row { get; set; }

	[Parameter]
	public int Column { get; set; }

	[Parameter]
	public int[,]? Grid { get; set; }

	[Parameter]
	public EventCallback UpdateParent { get; set; }

	private int? DisplayValue
	{
		get
		{
			int currentValue = Grid![Row, Column];

			if (currentValue < 1 || currentValue > 9)
				return null;
			else
				return currentValue;
		}
		set
		{
			int previousValue = Grid![Row, Column];

			if (value.HasValue && value.Value >= 1 && value.Value <= 9)
			{
				if (previousValue != value.Value)
				{
					Grid![Row, Column] = value.Value;
					UpdateParent.InvokeAsync();
				}
			}
			else
			{
				if (previousValue != 0)
				{
					Grid![Row, Column] = 0;
					UpdateParent.InvokeAsync();
				}
			}
		}
	}
}